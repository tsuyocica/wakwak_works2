<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center">ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <!-- エラーメッセージ表示 -->
          <%= render "shared/error_messages", object: resource %>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label fw-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label fw-bold" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "ログイン状態を保持", class: "form-check-label" %>
          </div>

          <!-- ボタン -->
          <div class="d-flex justify-content-center mt-3">
            <%= f.submit "ログイン", class: "btn btn-primary px-4 py-2" %>
          </div>
        <% end %>

        <!-- リンク -->
        <div class="text-center mt-3">
          <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-decoration-none d-block" %>
          <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-decoration-none d-block mt-2" %>
        </div>
      </div>
    </div>
  </div>
</div>